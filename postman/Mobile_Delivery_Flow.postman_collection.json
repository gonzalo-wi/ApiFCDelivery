{
  "info": {
    "name": "GoFrioCalor - Mobile Delivery Flow",
    "description": "Endpoints para el flujo completo de entregas móviles con RabbitMQ",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080/api/v1"
    },
    {
      "key": "delivery_id",
      "value": ""
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "0. Setup - Crear Delivery",
      "item": [
        {
          "name": "Crear Delivery",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set(\"delivery_id\", jsonData.id);",
                  "    pm.collectionVariables.set(\"token\", jsonData.token);",
                  "    console.log(\"✅ Delivery ID: \" + jsonData.id);",
                  "    console.log(\"✅ Token: \" + jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nro_cta\": \"12345\",\n  \"name\": \"Gonzalo Wiñazki\",\n  \"address\": \"Santiago de Liniers 3118\",\n  \"locality\": \"Ciudadela\",\n  \"nro_rto\": \"9\",\n  \"cantidad\": 2,\n  \"estado\": \"Pendiente\",\n  \"tipo_entrega\": \"Instalacion\",\n  \"entregado_por\": \"Tecnico\",\n  \"fecha_accion\": \"2025-11-12\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/deliveries",
              "host": ["{{base_url}}"],
              "path": ["deliveries"]
            },
            "description": "Crea un nuevo delivery y guarda automáticamente el ID y Token"
          },
          "response": []
        },
        {
          "name": "Agregar Dispenser 1",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marca\": \"LAMO\",\n  \"nro_serie\": \"LM123456789\",\n  \"tipo\": \"P\",\n  \"delivery_id\": {{delivery_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/dispensers",
              "host": ["{{base_url}}"],
              "path": ["dispensers"]
            },
            "description": "Agrega el primer dispenser al delivery"
          },
          "response": []
        },
        {
          "name": "Agregar Dispenser 2",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"marca\": \"LAMO\",\n  \"nro_serie\": \"LM987654321\",\n  \"tipo\": \"M\",\n  \"delivery_id\": {{delivery_id}}\n}"
            },
            "url": {
              "raw": "{{base_url}}/dispensers",
              "host": ["{{base_url}}"],
              "path": ["dispensers"]
            },
            "description": "Agrega el segundo dispenser al delivery"
          },
          "response": []
        }
      ]
    },
    {
      "name": "1. Mobile - Validar Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{token}}\",\n  \"nro_cta\": \"12345\",\n  \"fecha_accion\": \"2025-11-12\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/validate-token",
          "host": ["{{base_url}}"],
          "path": ["mobile", "validate-token"]
        },
        "description": "El repartidor valida el token proporcionado por el cliente junto con nro_cta y fecha"
      },
      "response": []
    },
    {
      "name": "2. Mobile - Validar Dispenser 1",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"delivery_id\": {{delivery_id}},\n  \"nro_serie\": \"LM123456789\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/validate-dispenser",
          "host": ["{{base_url}}"],
          "path": ["mobile", "validate-dispenser"]
        },
        "description": "El repartidor escanea el primer dispenser"
      },
      "response": []
    },
    {
      "name": "2. Mobile - Validar Dispenser 2",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"delivery_id\": {{delivery_id}},\n  \"nro_serie\": \"LM987654321\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/validate-dispenser",
          "host": ["{{base_url}}"],
          "path": ["mobile", "validate-dispenser"]
        },
        "description": "El repartidor escanea el segundo dispenser"
      },
      "response": []
    },
    {
      "name": "3. Mobile - Completar Entrega",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"delivery_id\": {{delivery_id}},\n  \"token\": \"{{token}}\",\n  \"validated_dispensers\": [\n    \"LM123456789\",\n    \"LM987654321\"\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/complete-delivery",
          "host": ["{{base_url}}"],
          "path": ["mobile", "complete-delivery"]
        },
        "description": "Completa la entrega y envía mensaje a RabbitMQ para generar WorkOrder"
      },
      "response": []
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8080/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["health"]
        },
        "description": "Verifica que el servidor esté funcionando"
      },
      "response": []
    }
  ]
}
